<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.f02h.testfft.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView" />


    <com.example.f02h.testfft.analysis.RecordButton
        android:layout_width="200px"
        android:layout_height="100px"
        android:id="@+id/RecordButton"
        android:text="RecordButton"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

    <Button
        android:layout_width="200px"
        android:layout_height="100px"
        android:id="@+id/Spectro"
        android:text="Spectro"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

    <com.example.f02h.testfft.analysis.PlayButton
        android:layout_width="200px"
        android:layout_height="100px"
        android:id="@+id/PlayButton"
        android:text="PlayButton"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/RecordButton"
        android:visibility="gone"
        android:src="@android:drawable/ic_media_play"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="60dp"
        android:layout_marginRight="80dp" />

    <com.example.f02h.testfft.analysis.PlayButton
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/PlayButton1"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/leftText"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@+id/leftText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp" />

    <com.example.f02h.testfft.analysis.PlayButton
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/PlayButton2"
        android:layout_below="@+id/leftText"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/leftText2"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />


</RelativeLayout>
